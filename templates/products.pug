include includes/head
include includes/nav
include includes/footer
doctype html
html(lang="en")
    +head("Products")
    body
        .wrapper
            header 
                +nav
            .content
                .container
                    h2 Products
                    .cards_wrapper
                        each prod in products
                            .card_item
                                img.card_image(src=prod.imgUrl alt="")
                                .card_body
                                    h3.card_title #{prod.title}
                                    p.card_price #{prod.price}$
                                    p #{prod.desc}
                                    .card_wrapper
                                        a(href="/product/" + prod._id) Learn more
                                        a(href="") Add to card                
            +footer
        script(src="./js/index.js")    