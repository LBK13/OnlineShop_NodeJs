include includes/head
include includes/nav
include includes/footer
doctype html
html(lang="en")
    +head("Sign up")
    body
        .wrapper
            header 
                +nav
            .content
                .form
                    .container 
                        h1(class="login_header") Sign up
                        form(action="/auth/register" method="POST" class="formReg")
                            .input_box
                                p.email_text
                                input(type="text" name="fullName" placeholder="Name" required)
                            .input_box
                                p.password_text
                                input(type="password" name="password" placeholder="Password" required)
                            .input_box
                                p.repeat_text
                                input(type="password" name="passwordRepeat" placeholder="Repeat password" required)
                            .input_box
                                p.name_text
                                input(type="email" name="username" placeholder="Email" required)
                            .input_box
                                p.phone_text
                                input(type="text" name="phoneNumber" placeholder="Your Phone Number" required)
                            label
                                input(type="checkbox" name="agree" class="checkbox" required) 
                                | I agree with terms and conditions
                            input(type="submit" value="Sign up " class)
                            p.acc_ad Already have an account? 
                                a(href="/auth/login") Sign in.
            +footer
        script(src="/js/validReg.js") 